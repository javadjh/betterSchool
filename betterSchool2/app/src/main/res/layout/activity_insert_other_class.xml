<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    app:cardElevation="@dimen/elevation"
    app:cardCornerRadius="@dimen/softRadius"
    android:layoutDirection="rtl"
    android:textDirection="rtl"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".otherClass.insertOtherClass.InsertOtherClassActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/back_layout"/>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:paddingVertical="@dimen/_5sdp"
                    android:id="@+id/gradeSpinner"
                    android:hint="مقطع"
                    app:ms_hint="مقطع"
                    android:layout_weight="50"
                    android:textSize="@dimen/formSize"
                    android:fontFamily="@font/vazir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/edtDescription"
                    android:gravity="top|right"
                    android:layout_gravity="top|right"
                    android:textSize="@dimen/formSize"
                    android:fontFamily="@font/vazir"
                    android:hint="توضیحات..."
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:paddingVertical="@dimen/_5sdp"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:background="@drawable/search_style"
                    android:minLines="4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/edtTitle"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_5sdp"
                        android:background="@drawable/search_style"
                        android:hint="عنوان کلاس..."
                        android:layout_weight="50"
                        android:textSize="@dimen/formSize"
                        android:fontFamily="@font/vazir"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/edtPrice"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_5sdp"
                        android:background="@drawable/search_style"
                        android:hint="هزینه کلاس..."
                        android:layout_weight="50"
                        android:textSize="@dimen/formSize"
                        android:fontFamily="@font/vazir"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/edtMinParticipant"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_5sdp"
                        android:background="@drawable/search_style"
                        android:hint="حداقل شرکت کننده..."
                        android:layout_weight="50"
                        android:textSize="@dimen/formSize"
                        android:fontFamily="@font/vazir"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/edtMaxParticipant"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_5sdp"
                        android:background="@drawable/search_style"
                        android:hint="حداکثر شرکت کننده..."
                        android:layout_weight="50"
                        android:textSize="@dimen/formSize"
                        android:fontFamily="@font/vazir"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/edtTimeStart"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_5sdp"
                        android:background="@drawable/search_style"
                        android:hint="ساعت شروع..."
                        android:layout_weight="50"
                        android:textSize="@dimen/formSize"
                        android:fontFamily="@font/vazir"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/edtSessionsCount"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_5sdp"
                        android:background="@drawable/search_style"
                        android:hint="تعداد جلسات"
                        android:layout_weight="50"
                        android:textSize="@dimen/formSize"
                        android:fontFamily="@font/vazir"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_5sdp"
                        android:background="@drawable/counter_style"
                        android:text="انتخاب عکس"
                        android:layout_weight="50"
                        android:id="@+id/filePicker"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="@dimen/formSize"
                        android:fontFamily="@font/vazir"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/startDateTV"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_5sdp"
                        android:background="@drawable/counter_style"
                        android:text="انتخاب تاریخ شروع"
                        android:layout_weight="50"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="@dimen/formSize"
                        android:fontFamily="@font/vazir"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/endDateTV"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_5sdp"
                        android:background="@drawable/counter_style"
                        android:text="انتخاب تاریخ شروع"
                        android:layout_weight="50"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="@dimen/formSize"
                        android:fontFamily="@font/vazir"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <TextView
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:paddingVertical="@dimen/_5sdp"
                    android:background="@drawable/counter_style"
                    android:text="معلم : ؟"
                    android:id="@+id/teacherName"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="@dimen/formSize"
                    android:fontFamily="@font/vazir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:textDirection="rtl"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:id="@+id/recyTeachers"
                    android:layoutDirection="rtl"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_teachers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
    <TextView
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:background="@color/green"
        android:id="@+id/insertBtn"
        android:textSize="@dimen/largeFont"
        android:padding="@dimen/_10sdp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:fontFamily="@font/vazir"
        android:text="ثبت کلاس"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>