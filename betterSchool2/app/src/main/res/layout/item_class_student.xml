<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layoutDirection="rtl"
    android:textDirection="rtl"
    android:id="@+id/classBlock"
    android:background="@color/primary"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/mainBlock"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/dayTitle"
            android:textSize="@dimen/largeFont"
            android:layout_marginTop="@dimen/_9sdp"
            android:textColor="@color/lightWhite"
            android:fontFamily="@font/vazir"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:text="شنبه"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginBottom="@dimen/_9sdp"
            android:id="@+id/classInformation"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/name"
                android:textColor="@color/white"
                android:layout_weight="30"
                android:fontFamily="@font/vazir"
                android:text="dfdfd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/timeStart"
                android:textColor="@color/white"
                android:layout_weight="30"
                android:fontFamily="@font/vazir"
                android:text="ساعت : 9:30"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/white"
                android:layout_weight="40"
                android:fontFamily="@font/vazir"
                android:text="استان شناسی خوزستان "
                android:id="@+id/classContainerName"
                android:layout_width="0dp"
                android:textSize="@dimen/smallFont"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/container"
        android:layout_below="@id/mainBlock"
        android:background="@color/opacity"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</RelativeLayout>