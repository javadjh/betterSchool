<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView app:cardCornerRadius="@dimen/radius"
    app:cardElevation="@dimen/elevation"
    android:layout_marginHorizontal="@dimen/_10sdp"
    android:layout_marginVertical="@dimen/_10sdp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/black"
                android:textSize="@dimen/largeFont"
                android:padding="@dimen/_5sdp"
                android:id="@+id/recyTitle"
                android:foregroundGravity="center"
                android:gravity="center"
                android:fontFamily="@font/vazir"
                android:text="فهرست امتحان های این کلاس"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:visibility="gone"
                android:id="@+id/searchValue"
                android:paddingVertical="@dimen/_5sdp"
                android:paddingHorizontal="@dimen/_10sdp"
                android:textSize="@dimen/formSize"
                android:fontFamily="@font/vazir"
                android:hint="جست و جو نام خانوادگی..."
                android:background="@drawable/search_style"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_below="@id/recyTitle"
                android:layoutDirection="rtl"
                android:id="@+id/recyExams"
                android:textDirection="rtl"
                tools:listitem="@layout/item_exam"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_above="@id/closeDialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:id="@+id/closeDialog"
            android:layout_alignParentBottom="true"
            android:textSize="@dimen/largeFont"
            android:padding="@dimen/_5sdp"
            android:textColor="@color/white"
            android:fontFamily="@font/vazir"
            android:foregroundGravity="center"
            android:gravity="center"
            android:background="@color/primary"
            android:text="بستن"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>