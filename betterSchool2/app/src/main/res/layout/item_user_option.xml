<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView app:cardCornerRadius="@dimen/softRadius"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    app:cardElevation="@dimen/elevation"
    android:id="@+id/card"
    android:layout_height="135dp"
    android:layout_marginHorizontal="@dimen/_5sdp"
    android:layout_marginVertical="@dimen/_10sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/cardContainer"
        android:paddingRight="@dimen/_10sdp"
        android:background="@drawable/card_four"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/title"
            android:paddingTop="@dimen/_5sdp"
            android:textSize="@dimen/largeFont"
            android:textColor="@color/white"
            android:fontFamily="@font/vazir"
            android:text="دانش آموزان"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:paddingTop="@dimen/_5sdp"
            android:textSize="@dimen/smallFont"
            android:id="@+id/description"
            android:textColor="@color/white"
            android:fontFamily="@font/vazir"
            android:text="تست توضیحات تست توضیحات تست توضیحات تست توضیحات  "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/cardIcon"
            android:layout_gravity="right"
            android:src="@drawable/ic_news"
            android:layout_width="70dp"
            android:paddingHorizontal="@dimen/_10sdp"
            android:layout_height="match_parent"
            app:tint="@color/white" />
    </LinearLayout>
</androidx.cardview.widget.CardView>