<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:textDirection="rtl"
    android:layoutDirection="rtl"
    android:layout_height="match_parent"
    tools:context=".students.insertStudent.InsertStudentActivity">
    <LinearLayout
        android:id="@+id/headerSide"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/back_layout"/>
        <LinearLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:drawablePadding="@dimen/_5sdp"
                android:drawableRight="@drawable/ic_baseline_edit_24"
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/smallFont"
                android:id="@+id/edtName"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:fontFamily="@font/vazir"
                android:hint="نام ..."
                android:paddingVertical="@dimen/_5sdp"
                android:paddingHorizontal="@dimen/_10sdp"
                android:background="@drawable/search_style"
                android:layout_width="0dp"
                android:layout_weight="50"
                android:layout_height="wrap_content"/>
            <EditText
                android:drawablePadding="@dimen/_5sdp"
                android:drawableRight="@drawable/ic_baseline_edit_24"
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/smallFont"
                android:id="@+id/edtLastName"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:fontFamily="@font/vazir"
                android:hint="نام خانوادگی ..."
                android:paddingVertical="@dimen/_5sdp"
                android:paddingHorizontal="@dimen/_10sdp"
                android:background="@drawable/search_style"
                android:layout_width="0dp"
                android:layout_weight="50"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:drawablePadding="@dimen/_5sdp"
                android:drawableRight="@drawable/ic_baseline_edit_24"
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/smallFont"
                android:id="@+id/edtMelliCode"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:fontFamily="@font/vazir"
                android:hint="شماره ملی ..."
                android:paddingVertical="@dimen/_5sdp"
                android:paddingHorizontal="@dimen/_10sdp"
                android:background="@drawable/search_style"
                android:layout_width="0dp"
                android:layout_weight="50"
                android:layout_height="wrap_content"/>
            <EditText
                android:drawablePadding="@dimen/_5sdp"
                android:drawableRight="@drawable/ic_baseline_edit_24"
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/smallFont"
                android:id="@+id/edtFathersName"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:fontFamily="@font/vazir"
                android:hint="نام پدر ..."
                android:paddingVertical="@dimen/_5sdp"
                android:paddingHorizontal="@dimen/_10sdp"
                android:background="@drawable/search_style"
                android:layout_width="0dp"
                android:layout_weight="50"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <com.jaredrummler.materialspinner.MaterialSpinner
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:hint="انتخاب مقطع"
            app:ms_hint="انتخاب مقطع"
            android:id="@+id/choiceGrade"
            android:fontFamily="@font/vazir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <ImageView
        android:padding="@dimen/_80sdp"
        android:layout_below="@id/headerSide"
        android:layout_above="@id/insertStudent"
        android:src="@drawable/ic_studentvector"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <TextView
        android:textSize="@dimen/largeFont"
        android:padding="@dimen/_9sdp"
        android:textColor="@color/white"
        android:id="@+id/insertStudent"
        android:background="@color/green"
        android:fontFamily="@font/vazir"
        android:autoSizeStepGranularity="@dimen/largeFont"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:text="ثبت دانش آموز جدید"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>