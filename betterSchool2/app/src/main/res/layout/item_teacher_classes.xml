<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layoutDirection="rtl"
    android:textDirection="rtl"
    android:id="@+id/classBlock"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/classInformation"
        android:layout_marginVertical="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/className"
            android:textColor="@color/black"
            android:layout_weight="30"
            android:fontFamily="@font/vazir"
            android:text="دینی"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/timeStart"
            android:textColor="@color/black"
            android:layout_weight="30"
            android:fontFamily="@font/vazir"
            android:text="ساعت : 9:30"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="@color/primary"
            android:layout_weight="40"
            android:fontFamily="@font/vazir"
            android:text="اول تجربی یک"
            android:id="@+id/ClassContainerName"
            android:layout_width="0dp"
            android:textSize="@dimen/largeFont"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:id="@+id/container"
        android:layout_below="@id/classInformation"
        android:background="@color/opacity"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:id="@+id/dayShower"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@id/container"
        android:background="@color/primary"
        android:layout_width="40dp"
        android:layout_height="match_parent">
        <TextView
            android:textSize="@dimen/smallFont"
            android:textColor="@color/white"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_gravity="center"
            android:fontFamily="@font/vazir"
            android:id="@+id/dayTitle"
            android:rotation="90"
            android:text="شنبه"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</RelativeLayout>