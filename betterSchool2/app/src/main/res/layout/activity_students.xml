<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layoutDirection="rtl"
    android:textDirection="rtl"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".students.StudentsActivity">
    <include layout="@layout/back_layout"
        android:id="@+id/back"/>
    <LinearLayout
        android:layout_below="@id/back"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:drawablePadding="@dimen/_5sdp"
                android:drawableRight="@drawable/ic_baseline_search_24"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:textSize="@dimen/smallFont"
                android:id="@+id/edtSearchValue"
                android:fontFamily="@font/vazir"
                android:hint="جست و جوی فامیلی"
                android:paddingVertical="@dimen/_5sdp"
                android:paddingHorizontal="@dimen/_10sdp"
                android:background="@drawable/search_style"
                android:layout_width="0dp"
                android:layout_weight="80"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/familySearch"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/white"
                android:background="@drawable/btn_style"
                android:layout_marginLeft="@dimen/_10sdp"
                android:gravity="center"
                android:layout_gravity="center|bottom"
                android:fontFamily="@font/vazir"
                android:layout_weight="20"
                android:text="اعمال"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    tools:listitem="@layout/item_student"
                    android:textDirection="rtl"
                    android:id="@+id/recyStudents"
                    android:overScrollMode="never"
                    android:layoutDirection="rtl"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <com.github.ybq.android.spinkit.SpinKitView
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:id="@+id/progress"
                    android:visibility="visible"
                    style="@style/SpinKitView.Large.Circle"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="center"
                    app:SpinKit_Color="@color/primary" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:background="@color/green"
        android:id="@+id/insertStudent"
        app:elevation="@dimen/_10sdp"
        android:visibility="visible"
        app:rippleColor="@color/white"
        android:layout_margin="@dimen/_15sdp"
        app:backgroundTint="@color/green"
        app:tint="@color/white"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_baseline_add_24"
        android:layout_height="wrap_content"/>
</RelativeLayout>