<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView app:cardCornerRadius="@dimen/radius"
    app:cardElevation="@dimen/elevation"
    android:layout_marginHorizontal="@dimen/_10sdp"
    android:layout_marginVertical="@dimen/_10sdp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layoutDirection="rtl"
    android:textDirection="rtl"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/black"
            android:textSize="@dimen/largeFont"
            android:padding="@dimen/_5sdp"
            android:id="@+id/recyTitle"
            android:foregroundGravity="center"
            android:gravity="center"
            android:fontFamily="@font/vazir"
            android:text="فهرست تخلف ها"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:orientation="horizontal"
            android:id="@+id/formInsert"
            android:layout_below="@id/recyTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/title"
                android:textSize="@dimen/formSize"
                android:paddingVertical="@dimen/_5sdp"
                android:paddingHorizontal="@dimen/_10sdp"
                android:fontFamily="@font/vazir"
                android:background="@drawable/search_style"
                android:layout_weight="30"
                android:layout_marginLeft="@dimen/_5sdp"
                android:hint="عنوان"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/score"
                android:textSize="@dimen/formSize"
                android:paddingVertical="@dimen/_5sdp"
                android:paddingHorizontal="@dimen/_10sdp"
                android:fontFamily="@font/vazir"
                android:background="@drawable/search_style"
                android:layout_weight="30"
                android:hint="نمره"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/addViolation"
                android:layout_marginRight="@dimen/_5sdp"
                android:textColor="@color/white"
                android:background="@drawable/counter_style"
                android:fontFamily="@font/vazir"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="ثبت"
                android:layout_weight="20"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_below="@id/formInsert"
            android:layoutDirection="rtl"
            android:id="@+id/recyExams"
            android:textDirection="rtl"
            tools:listitem="@layout/item_exam"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_above="@id/closeDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/closeDialog"
            android:layout_alignParentBottom="true"
            android:textSize="@dimen/largeFont"
            android:padding="@dimen/_5sdp"
            android:textColor="@color/white"
            android:fontFamily="@font/vazir"
            android:foregroundGravity="center"
            android:gravity="center"
            android:background="@color/primary"
            android:text="بستن"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>