<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layoutDirection="rtl"
    android:textDirection="rtl"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:padding="@dimen/_8sdp"
        android:textSize="@dimen/largeFont"
        android:foregroundGravity="center"
        android:gravity="center"
        android:id="@+id/title"
        android:fontFamily="@font/vazir"
        android:text="تست متن"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:padding="@dimen/_3sdp"
        android:textColor="@color/red"
        android:layout_marginRight="@dimen/_8sdp"
        android:fontFamily="@font/vazir"
        android:layout_below="@id/title"
        android:id="@+id/studentsAbsent"
        android:textDirection="rtl"
        android:layoutDirection="rtl"
        android:text="محمد جواد حجتی ، علی رضا محمدی ، امین بهبهانی نژاد"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:layout_below="@id/studentsAbsent"
        android:background="@color/opacity"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</RelativeLayout>