<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layoutDirection="rtl"
    android:textDirection="rtl"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".classContainer.moveStudent.ModeStudentActivity">
    <include layout="@layout/back_layout"/>
    <LinearLayout
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.jaredrummler.materialspinner.MaterialSpinner
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_weight="60"
            android:layout_width="0dp"
            android:id="@+id/receiverClassSpinner"
            android:hint="انتخاب کلاس مقصد"
            android:fontFamily="@font/vazir"
            app:ms_hint="انتخاب کلاس مقصد"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:textColor="@color/white"
            android:fontFamily="@font/vazir"
            android:background="@drawable/btn_style"
            android:id="@+id/moveStudent"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="40"
            android:text="انتقال دانش آموز"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        app:cardBackgroundColor="@color/primary"
        app:cardCornerRadius="@dimen/softRadius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/studentSelected"
            android:padding="@dimen/_10sdp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center"
            android:fontFamily="@font/vazir"
            android:text="دانش آموزش انتخاب نشده"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>
    <androidx.recyclerview.widget.RecyclerView
        android:layoutDirection="rtl"
        android:textDirection="rtl"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:id="@+id/recyStudents"
        tools:listitem="@layout/item_students"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>