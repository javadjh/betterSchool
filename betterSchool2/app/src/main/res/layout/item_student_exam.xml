<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView app:cardCornerRadius="@dimen/softRadius"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/elevation"
    android:layout_marginVertical="@dimen/_5sdp"
    android:layout_marginHorizontal="@dimen/_10sdp"
    android:layoutDirection="rtl"
    android:textDirection="rtl"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/title"
            android:padding="@dimen/_5sdp"
            android:gravity="center"
            android:layout_gravity="center"
            android:fontFamily="@font/vazir"
            android:text="عنوان : امتحان از فصل دوم زیست"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/startDate"
            android:padding="@dimen/_5sdp"
            android:gravity="center"
            android:layout_gravity="center"
            android:fontFamily="@font/vazir"
            android:text="تاریخ : 1400-02-01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/type"
            android:padding="@dimen/_5sdp"
            android:gravity="center"
            android:layout_gravity="center"
            android:fontFamily="@font/vazir"
            android:text="نوع امتحان : امتحان نوبت اول"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/score"
            android:padding="@dimen/_5sdp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@color/primary"
            android:textColor="@color/white"
            android:fontFamily="@font/vazir"
            android:text="نمره اخذ شده : ثبت نشده"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>