                    android:layout_marginLeft="@dimen/_5sdp"
                    android:background="@color/opacity"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"/>
                <androidx.recyclerview.widget.RecyclerView
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="horizontal"
                    tools:listitem="@layout/item_text"
                    android:layout_gravity="center"
                    android:overScrollMode="never"
                    android:id="@+id/recyFour"
                    android:layoutDirection="rtl"
                    android:textDirection="rtl"
                    tools:itemCount="5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:layout_below="@id/dayFour"
                android:background="@color/opacity"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:textDirection="rtl"
            android:layoutDirection="rtl"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/dayFive"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:fontFamily="@font/vazir"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:text="چهارشنبه"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:background="@color/opacity"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"/>
                <androidx.recyclerview.widget.RecyclerView
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="horizontal"
                    tools:listitem="@layout/item_text"
                    android:layout_gravity="center"
                    android:overScrollMode="never"
                    android:id="@+id/recyFive"
                    android:layoutDirection="rtl"
                    android:textDirection="rtl"
                    tools:itemCount="5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:layout_below="@id/dayFive"
                android:background="@color/opacity"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:textDirection="rtl"
            android:layoutDirection="rtl"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/daysix"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:fontFamily="@font/vazir"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:text="پنج شنبه"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_marginLeft="@dimen/_5sdp"
