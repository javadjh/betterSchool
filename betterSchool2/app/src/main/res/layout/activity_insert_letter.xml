<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layoutDirection="rtl"
    android:textDirection="rtl"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".letters.insertLetter.InsertLetterActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/back_layout"/>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_marginTop="@dimen/_10sdp"
                    app:cardElevation="@dimen/elevation"
                    app:cardCornerRadius="@dimen/softRadius"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/title"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:textSize="@dimen/formSize"
                            android:paddingVertical="@dimen/_5sdp"
                            android:paddingHorizontal="@dimen/_10sdp"
                            android:fontFamily="@font/vazir"
                            android:background="@drawable/search_style"
                            android:hint="عنوان را وارد کنید"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <EditText
                            android:id="@+id/description"
                            android:textSize="@dimen/formSize"
                            android:paddingHorizontal="@dimen/_10sdp"
                            android:paddingVertical="@dimen/_5sdp"
                            android:gravity="top|right"
                            android:layout_gravity="top|right"
                            android:fontFamily="@font/vazir"
                            android:hint="متن پیام را بنویسید..."
                            android:background="@drawable/search_style"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:minLines="4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_marginVertical="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/softRadius"
                    app:cardElevation="@dimen/elevation"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RadioGroup
                            android:id="@+id/typeRadio"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <RadioButton
                                android:id="@+id/sendAllStudent"
                                android:textSize="@dimen/formSize"
                                android:textDirection="rtl"
                                android:layoutDirection="rtl"
                                android:fontFamily="@font/vazir"
                                android:text="ارسال به همه دانش آموزان"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <RadioButton
                                android:id="@+id/sendAllTeacher"
                                android:textSize="@dimen/formSize"
                                android:textDirection="rtl"
                                android:layoutDirection="rtl"
                                android:fontFamily="@font/vazir"
                                android:text="ارسال به همه دانش معلمین"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <RadioButton
                                android:id="@+id/sendStudent"
                                android:textSize="@dimen/formSize"
                                android:textDirection="rtl"
                                android:layoutDirection="rtl"
                                android:fontFamily="@font/vazir"
                                android:text="ارسال به دانش آموز خاص"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <RadioButton
                                android:id="@+id/sendTeacher"
                                android:textSize="@dimen/formSize"
                                android:textDirection="rtl"
                                android:layoutDirection="rtl"
                                android:fontFamily="@font/vazir"
                                android:text="ارسال به معلم خاص"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </RadioGroup>
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/choiceUser"
                            android:padding="@dimen/_5sdp"
                            android:fontFamily="@font/vazir"
                            android:textColor="@color/white"
                            android:background="@color/primary"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="انتخاب کاربر"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
    <TextView
        android:textSize="@dimen/largeFont"
        android:id="@+id/insertLetter"
        android:padding="@dimen/_10sdp"
        android:textColor="@color/white"
        android:background="@color/green"
        android:layout_alignParentBottom="true"
        android:foregroundGravity="center"
        android:gravity="center"
        android:fontFamily="@font/vazir"
        android:text="ارسال پیام"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>